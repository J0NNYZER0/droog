{
    "extends": "eslint-config-hapi",
    "plugins": [
        "standard",
        "promise"
    ],
    "rules": {
      "indent": ["error", "tab"],
      "semi": ["error", "never"],
      "one-var": ["error", "always"],
      "sort-vars": [1, { "ignoreCase": true }],
      "arrow-parens": [1, "always"]
    }
}